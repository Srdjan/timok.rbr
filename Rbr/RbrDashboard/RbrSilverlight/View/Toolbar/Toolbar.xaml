<UserControl x:Class="RbrSiverlight.View.Toolbar.Toolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="31">
    <Grid>
        <Rectangle x:Name="toolbarRect" Height="31" Stroke="#FF000000" Canvas.Left="0" Canvas.Top="0">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF999898" Offset="0"/>
                    <GradientStop Color="#FF3F3E3C" Offset="0.826"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        
        <StackPanel Orientation="Horizontal" Background="Transparent" Margin="7, 0" x:Name="ButtonStack">
        </StackPanel>
    </Grid>
</UserControl>
